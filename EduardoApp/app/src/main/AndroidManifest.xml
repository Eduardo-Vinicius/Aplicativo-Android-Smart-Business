<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.eduardoapp">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-feature android:name="android.hardware.type.watch" />
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <application
        android:name=".BNPApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">



        <!--
               Set to true if your app is Standalone, that is, it does not require the handheld
               app to run.
        -->
        <meta-data
            android:name="com.google.android.wearable.standalone"
            android:value="true" />

        <activity
            android:name=".MapasActivity"
            android:label="@string/title_activity_mapas">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BicicletaActivity"
            android:theme="@style/AppTheme.Toolbar"
            android:parentActivityName=".TelaInicialActivity"></activity>
        <activity android:name=".TelaBicicletaActivity"
            android:theme="@style/AppTheme.Toolbar"
            android:parentActivityName=".TelaInicialActivity"></activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/API_KEY" />

        <service android:name=".MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service> <!-- <activity android:name=".TelaInicialActivity" -->
        <!-- android:theme="@style/AppTheme.Toolbar"></activity> -->
        <activity android:name=".DebugActivity" />
        <activity
            android:name=".DrawerActivity"
            android:theme="@style/AppTheme.Toolbar" />
        <activity
            android:name=".FuncionarioActivity"
            android:parentActivityName=".TelaInicialActivity"
            android:theme="@style/AppTheme.Toolbar" />
        <activity android:name=".ConfigActivity" />
        <activity android:name=".CadastroActivity" />
        <activity android:name=".AdicionarFuncActivity" />
        <activity
            android:name=".TelaInicialActivity"
            android:theme="@style/AppTheme.Toolbar" />
        <activity
            android:name=".NovoFuncionarioActivity"
            android:theme="@style/AppTheme.Toolbar" />
        <activity
            android:name=".NovaBikeActivity"
            android:theme="@style/AppTheme.Toolbar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>